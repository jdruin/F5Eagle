source [file join [file normalize [file dirname [info script]]] prologue.eagle]

###############################################################################

runTest {test try-2.1 {try/catch/error/finally} -setup {
  unset -nocomplain x z
} -body {
  list [catch {
    try {
      lappend z try_before
      catch {unset x}
      error "this is a 'try' error."
      lappend z try_after
    } finally {
      lappend z finally_before
      catch {unset x}
      error "this is a 'finally' error."
      lappend z finally_after
    }
  } error] $error $z
} -cleanup {
  unset -nocomplain z error
} -constraints {eagle} -result \
{1 {this is a 'finally' error.} {try_before finally_before}}}

###############################################################################

source [file join [file normalize [file dirname [info script]]] epilogue.eagle]
